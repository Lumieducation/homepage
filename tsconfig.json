{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "allowJs": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "./build"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"],
    "preset": "ts-jest"
}
