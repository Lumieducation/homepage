<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-5">
            <div class="col-md-7 text-center heading-section ftco-animate fadeInUp ftco-animated">
                <span class="subheading">{{i18n "features.subheading"}}</span>
                <h2>{{i18n "features.heading"}}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-3 d-flex align-self-stretch ftco-animate fadeInUp ftco-animated">
                <div class="media block-6 services d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon color-1 d-flex justify-content-center mb-3"><img alt="H5P Editor" width="90"
                                src="/images/H5P_Logo.svg"></div>
                    </div>
                    <div class="media-body p-2">
                        <h3 class="heading">{{i18n "features.h5p.heading"}}
                        </h3>
                        <p>{{i18n "features.h5p.description"}}
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex align-self-stretch ftco-animate fadeInUp ftco-animated">
                <div class="media block-6 services d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon color-2 d-flex justify-content-center mb-3"><span
                                class="align-self-center icon-edit"></span></div>
                    </div>
                    <div class="media-body p-2">
                        <h3 class="heading">{{i18n "features.use.heading"}}
                        </h3>
                        <p>{{i18n "features.use.description"}}
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 d-flex align-self-stretch ftco-animate fadeInUp ftco-animated">
                <div class="media block-6 services d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon color-3 d-flex justify-content-center mb-3"><span
                                class="align-self-center icon-eye"></span></div>
                    </div>
                    <div class="media-body p-2">
                        <h3 class="heading">{{i18n "features.preview.heading"}}
                        </h3>
                        <p>{{i18n "features.preview.description"}}
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 d-flex align-self-stretch ftco-animate fadeInUp ftco-animated">
                <div class="media block-6 services d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon color-4 d-flex justify-content-center mb-3"><span
                                class="align-self-center icon-open_in_browser"></span></div>
                    </div>
                    <div class="media-body p-2">
                        <h3 class="heading">{{i18n "features.standalone.heading"}}
                        </h3>
                        <p>{{i18n "features.standalone.description"}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>