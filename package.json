{
    "name": "lumi",
    "version": "0.2.35",
    "description": "A tool to create and display interactive content with H5P",
    "author": "J.P. Schellenberg",
    "main": "build/main.js",
    "dependencies": {
        "body-parser": "1.19.0",
        "express": "4.17.1",
        "express-handlebars": "^5.2.0",
        "superagent": "^6.1.0"
    },
    "scripts": {
        "build": "npx tsc --project tsconfig.json",
        "ci": "npm run lint && npm run format:check && npm run build && npm run test",
        "clean": "rm -rf build/",
        "format": "npx prettier --write \"{src,test}/**/*.ts\"",
        "format:check": "npx prettier --check \"{src,test}/**/*.ts\"",
        "lint": "./node_modules/.bin/tslint --project tsconfig.json --config tslint.json",
        "uninstall": "rm -rf build/ && rm -rf node_modules/",
        "heroku-postbuild": "npm run build"
    },
    "publishConfig": {
        "access": "restricted"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run format:check",
            "pre-push": "npm run ci",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@types/body-parser": "1.19.0",
        "@types/express": "4.17.8",
        "@types/node": "12.12.68",
        "husky": "4.3.0",
        "prettier": "2.1.2",
        "tslint": "6.1.3",
        "tslint-config-airbnb": "5.11.2",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "5.0.0",
        "typescript": "4.0.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Lumieducation/Lumi.git"
    }
}
