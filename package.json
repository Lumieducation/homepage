{
    "name": "lumi-education-homepage",
    "version": "0.0.0",
    "description": "Lumi.education",
    "author": "J.P. Schellenberg",
    "dependencies": {
        "body-parser": "1.19.0",
        "express": "4.17.1",
        "express-handlebars": "5.3.2",
        "helmet": "4.6.0",
        "i18n": "0.13.3",
        "i18next": "19.9.2",
        "i18next-fs-backend": "1.1.1",
        "i18next-http-middleware": "3.1.4",
        "morgan": "1.10.0",
        "superagent": "6.1.0"
    },
    "scripts": {
        "build": "npx tsc --project tsconfig.json",
        "ci": "npm run lint && npm run format:check && npm run build",
        "clean": "rm -rf build/",
        "format": "npx prettier --write \"{src,test}/**/*.ts\"",
        "format:check": "npx prettier --check \"{src,test}/**/*.ts\"",
        "lint": "./node_modules/.bin/tslint --project tsconfig.json --config tslint.json",
        "uninstall": "rm -rf build/ && rm -rf node_modules/",
        "heroku-postbuild": "npm run build",
        "watch": "cross-env NODE_ENV=development nodemon",
        "localize": "json-autotranslate -d --directory-structure ngx-translate -c google_translate.json -s google-translate --decode-escapes -t key-based -i locales -m i18next && prettier --write \"locales/*.json\""
    },
    "publishConfig": {
        "access": "restricted"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run format:check",
            "pre-push": "npm run ci",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@commitlint/config-conventional": "11.0.0",
        "@types/body-parser": "1.19.0",
        "@types/express": "4.17.12",
        "@types/i18next": "13.0.0",
        "@types/node": "12.20.15",
        "commitlint": "11.0.0",
        "cross-env": "7.0.3",
        "husky": "4.3.8",
        "json-autotranslate": "1.9.0",
        "nodemon": "2.0.9",
        "prettier": "2.2.1",
        "ts-node": "9.1.1",
        "tslint": "6.1.3",
        "tslint-config-airbnb": "5.11.2",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "5.0.0",
        "typescript": "4.3.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Lumieducation/homepage.git"
    }
}
