{
    "name": "lumi-education-homepage",
    "version": "0.0.0",
    "description": "Lumi.education",
    "author": "J.P. Schellenberg",
    "dependencies": {
        "body-parser": "1.19.0",
        "express": "4.17.1",
        "express-handlebars": "5.2.0",
        "superagent": "6.1.0"
    },
    "scripts": {
        "build": "npx tsc --project tsconfig.json",
        "ci": "npm run lint && npm run format:check && npm run build && npm run test",
        "clean": "rm -rf build/",
        "format": "npx prettier --write \"{src,test}/**/*.ts\"",
        "format:check": "npx prettier --check \"{src,test}/**/*.ts\"",
        "lint": "./node_modules/.bin/tslint --project tsconfig.json --config tslint.json",
        "uninstall": "rm -rf build/ && rm -rf node_modules/",
        "heroku-postbuild": "npm run build"
    },
    "publishConfig": {
        "access": "restricted"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run format:check",
            "pre-push": "npm run ci",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@commitlint/config-conventional": "11.0.0",
        "@types/body-parser": "1.19.0",
        "@types/express": "4.17.11",
        "@types/node": "12.19.16",
        "commitlint": "11.0.0",
        "husky": "4.3.8",
        "prettier": "2.2.1",
        "tslint": "6.1.3",
        "tslint-config-airbnb": "5.11.2",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "5.0.0",
        "typescript": "4.1.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Lumieducation/homepage.git"
    }
}
